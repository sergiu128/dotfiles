{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "hpp",
                "h",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "build/compile_commands.json",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                },
                "index": {
                    "onChange": false,
                    "threads": 4
                },
                "highlight": { "lsRanges": true },
                "compilationDatabaseDirectory": "build",
                "clang": {
                    "extraArgs": ["-std=c++-20"]
                }
            }
        }
    }
}
